echo "----------UPDATING-------------"
sudo apt-get update
echo "-------------------------------"
echo "----------INSTALLING DOCKER----"
sudo apt install docker.io
echo "----------INSTALLING CURL------"
sudo apt install curl
echo "----------BUILDING...----------"
sudo docker pull ppolanski27/flask:latest .
sudo docker run -d -p 5000:5000 ppolanski/flask:latest
echo ""
curl localhost:5000
echo ""
echo "done!"
